{
  "appId": "beangreen247.xylonic.musicplayer",
  "productName": "Xylonic",
  "asar": false,
  "directories": {
    "output": "dist"
  },
  "files": [
    "build/**/*",
    "public/electron.js",
    "public/logo.svg",
    "node_modules/electron-is-dev/**/*"
  ],
  "extraResources": [
    {
      "from": "public/logo.svg",
      "to": "logo.svg"
    }
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      },
      {
        "target": "portable",
        "arch": ["x64"]
      }
    ],
    "artifactName": "${productName}-${version}-${arch}.${ext}"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true
  },
  "linux": {
    "target": [
      "AppImage",
      "deb"
    ],
    "category": "AudioVideo",
    "artifactName": "${productName}-${version}-${arch}.${ext}"
  },
  "portable": {
    "artifactName": "${productName}-${version}-portable.${ext}"
  }
}